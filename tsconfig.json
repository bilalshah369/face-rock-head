{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "lib": ["es2019"],
    "jsx": "react-native",

    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,

    "moduleResolution": "node",

    "sourceMap": true,
    "inlineSources": true,

    "types": ["react", "react-native"]
  },
  "include": ["src"]
}
